<?xml version="1.0"?>
<ruleset name="PHP_CodeSniffer">
    <description>The Coding standard</description>

    <file>src/</file>
    <file>tests/</file>

    <arg name="basepath" value="."/>
    <arg name="colors" />
    <arg name="parallel" value="75" />

    <rule ref="PSR2"/>
    
    <rule ref="Generic.Files.LineLength">
        <exclude-pattern>*/Tests/*</exclude-pattern>
    </rule>
</ruleset>